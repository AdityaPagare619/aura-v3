# ===========================================
# AURA v3 Environment Variables Template
# Copy to .env and configure for your setup
# ===========================================

# AURA Configuration
AURA_ENV=production
AURA_DEBUG=false
AURA_LOG_LEVEL=INFO

# API Server
AURA_API_PORT=5000
AURA_DASHBOARD_PORT=8080
AURA_API_HOST=0.0.0.0

# Data Directories
AURA_DATA_DIR=/app/data
AURA_MODELS_DIR=/app/models
AURA_CACHE_DIR=/app/.cache

# LLM Configuration
LLM_BACKEND=ollama
LLM_MODEL=llama2:7b
LLM_HOST=ollama:11434
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=512

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# Security
AURA_ENCRYPT_STORAGE=true
AURA_SECURITY_LEVEL=PIN

# Voice Configuration
TTS_BACKEND=edge-tts
STT_BACKEND=whisper

# Ollama (when running locally)
OLLAMA_HOST=ollama:11434
